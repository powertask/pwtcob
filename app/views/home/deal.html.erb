<div class='title_tools'>
  <a class="btn btn-large btn-warning" <%= link_to(t('deal.root'), :back) %> </a>
</div>

<div class='title_page'>
  <span> <%= t('deal.title') %> </span>
</div>

<br>

<div class="row marketing">
  <div class="col-sm-6 col-md-4">
    <div class="panel panel-primary">
      <div class='subtitle'> <%= t('taxpayer.show') %> </div>
      <% unless @taxpayer.nil? %>
        <div class='section'>
          <div class='label1 top req'> <%=t("taxpayer.origin_code") %>: </div>  <%= @taxpayer.origin_code %>
          <div class='label1 top req'> <%=t("client.name") %>: </div>       <%= @taxpayer.client.name %>
          <div class='label1 top req'> <%=t("taxpayer.name") %>: </div>     <%= @taxpayer.name %>
          <div class='label1 top req'> <%=t("phone") %>: </div>         <%= @taxpayer.phone %>
          <div class='label1 top req'> <%=t("cnpj") %>: </div>          <%= @taxpayer.cpf %>
          <div class='label1 top req'> <%=t("zipcode") %>: </div>         <%= @taxpayer.zipcode %>
          <div class='label1 top req'> <%=t("state") %>: </div>         <%= @taxpayer.state %>
          <div class='label1 top req'> <%=t("city") %>: </div>          <%= @taxpayer.city %>
          <div class='label1 top req'> <%=t("address") %>: </div>         <%= @taxpayer.address %>
          <div class='label1 top req'> <%=t("complement") %>: </div>        <%= @taxpayer.complement %>
          <div class='label1 top req'> <%=t("neighborhood") %>: </div>      <%= @taxpayer.neighborhood %>
        </div>
      <% end %> 
    </div>
  </div>

  <div class="col-sm-6 col-md-8">

    <div id='table-cna'>
      <%= render 'cnas' %>
    </div>


    <div class="row">
      <div class="col-md-6 col-md-offset-2" id="task-form" style="display:none;">
        <%= render 'cna' %>
      </div>
    </div>

    <div class='subtitle'> <%= t('deal.ticket') %> </div>

    <%= form_tag(get_tickets_path, method: 'get', remote: true) do |f| %>
      <div class='section'>
        <p><%= label_tag(:unit_perc, t('deal.unit_perc')) %>
        <%= text_field_tag( :unit_perc) %>
        <p><%= label_tag(:unit_ticket_quantity, t('deal.ticket_quantity', name: 'GMA')) %>
        <%= text_field_tag( :unit_ticket_quantity) %>
        <p><%= label_tag(:unit_ticket_due, t('deal.unit_ticket_due', name: 'GMA')) %>
        <%= text_field_tag( :unit_ticket_due) %>
        <p><%= submit_tag() %></p>
      </div>

    <% end %>

    <div id='table-tickets'>
      <%= render 'tickets' %>
    </div>

  </div>
</div>
