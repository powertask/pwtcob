<div class='title_tools'>
  <a class="btn btn-xs btn-warning" <%= link_to(t('deal.recalculate'), :back) %> </a>
</div>
<div class='subtitle'> <%= t('deal.ticket') %> </div>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Valor de Parcela GMA</th>
      <th>Valor de Parcela Cliente</th>
      <th>Vencimento</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tfoot>  
  <tbody>
    <% unless @tickets.nil? %>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket[:ticket] %> </td>
          <td><%= ticket[:unit_amount] %> </td>
          <td><%= ticket[:client_amount] %> </td>
          <td><%= ticket[:due].to_s_br %> </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
