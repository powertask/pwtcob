<div class='title_tools'>
  <a class="btn btn-large btn-warning" <%= link_to(t('city.new'), new_city_path) %> </a>
</div>

<div class='title_page'>
  <span> <%= t('city.title') %> </span>
</div>

<p>
  <%= form_tag(cities_path, :method=>'get') do |f| %>
    <%= text_field_tag 'name', params[:name], :size => 80 %>
    <%= submit_tag t('city.search') %> ou <%= link_to t('menu.clean'), cities_path %>
  <% end %>
</p>

<p id="notice"><%= notice %></p>

<div class='list1'>
  <% unless @cities.empty? %>
    <% @cities.each do |city| %>
      <li>
        
        <% if city.fl_charge %>
          <div class='strip green' id='none'> <%= city.id %> </div>
        <% else %>
          <div class='strip red' id='none'> <%= city.id %> </div>
        <% end %>

        <div class='tools'>
          <%= link_to(t('menu.edit'), edit_city_path(city), class: "btn btn-xs btn-default") %>
        </div>
 
        <div class='indent'>
          <%= link_to(city.name, city_path(city)) %>
          &bull;
          <%= city.state %>
          &bull;
          <tt><%= city.fl_charge ? "Cidade liberada para cobrança" : "Não cobrar contribuintes dessa cidade" %></tt>
          <dt></dt>
        </div>
      </li>
    <% end %>
  <% end %>
</div>

<div id='paginate'>
  <div class="apple_pagination">
    <%= will_paginate @cities, :container => false %>
  </div>
</div>
