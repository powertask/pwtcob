<div class='title_tools'>
  <a class="btn btn-large btn-warning" <%= link_to(t('deal.root'), :back) %> </a>
</div>

<div class='title_page'>
  <span> <%= t('deal.title') %> </span>
</div>

<br>

<div class="row marketing">
  <div class="col-sm-6 col-md-4">
    <div class="panel panel-default">
      <div class='title_page'> <%= t('taxpayer.show') %> </div>
      <% unless @taxpayer.nil? %>
        <div class='section'>
          <div class='label1 top req'> <%=t("taxpayer.origin_code") %>: </div>  <%= @taxpayer.origin_code %>
          <div class='label1 top req'> <%=t("client.name") %>: </div>       <%= @taxpayer.client.name %>
          <div class='label1 top req'> <%=t("taxpayer.name") %>: </div>     <%= @taxpayer.name %>
          <div class='label1 top req'> <%=t("cnpj") %>: </div>          <%= @taxpayer.cpf %>
          <div class='label1 top req'> <%=t("zipcode") %>: </div>         <%= @taxpayer.zipcode %>
          <div class='label1 top req'> <%=t("state") %>: </div>         <%= @taxpayer.state %>
          <div class='label1 top req'> <%=t("city") %>: </div>          <%= @taxpayer.city %>
          <div class='label1 top req'> <%=t("address") %>: </div>         <%= @taxpayer.address %>
          <div class='label1 top req'> <%=t("complement") %>: </div>        <%= @taxpayer.complement %>
          <div class='label1 top req'> <%=t("neighborhood") %>: </div>      <%= @taxpayer.neighborhood %>
          <div class='label1 top req'> <%=t("phone") %>: </div>         <%= @taxpayer.phone %>
        </div>
      <% end %> 
    </div>
  </div>

  <div class="col-sm-6 col-md-8">
    <div class="panel panel-default">
    <p>
      <%= form_tag(employees_path, :method=>'get') do |f| %>
        <%= text_field_tag 'name', params[:name], :size => 80 %>
        <%= submit_tag t('employee.search') %> ou <%= link_to t('menu.clean'), employees_path %>
      <% end %>
    </p>
    <div class='title_page'> <%= t('deal.cnas') %> </div>
      <table class="table">
        <thead>
          <tr>
            <th>Ano</th>
            <th>Num Doc</th>
            <th>Valor CNA</th>
            <th>Data</th>
            <th>Vencimento</th>
            <th>Tipo Cob</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% unless @cnas.nil? %>
            <% @cnas.each do |cna| %>
              <tr>
                <td><%= cna.year %> </td>
                <td><%= cna.nr_document %> </td>
                <td><%= cna.amount %> </td>
                <td><%= cna.start_at.to_s_br %> </td>
                <td><%= cna.due_at.to_s_br %> </td>
                <td><%= cna.stage %> </td>
                <td><%= cna.status %> </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>


    <div class='title_page'> <%= t('deal.ticket_unit') %> </div>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Vencimento</th>
            <th>Valor</th>
          </tr>
        </thead>
        <tbody>
          <% unless @tickets.nil? %>
            <% @tickets.each do |ticket| %>
              <tr>
                <td><%= ticket.ticket_number %> </td>
                <td><%= ticket.amount %> </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

    </div>







  </div>
</div>
